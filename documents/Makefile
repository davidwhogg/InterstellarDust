all: for_coryn.pdf imposing_spatial_priors.pdf

vc.tex: ../.git/logs/HEAD
	echo "%%% This file is generated by Makefile." > vc.tex
	git log -1 --date=iso8601 --format="format:\\newcommand{\\githash}{%h}\\newcommand{\\gitdate}{%ad}\\newcommand{\\gitauthor}{%an}" >> vc.tex

%.pdf: %.tex vc.tex
	pdflatex $<
	bash -c " ( grep Rerun\ to $*.log && pdflatex $< ) || echo noRerun "
	bash -c " ( grep Rerun\ to $*.log && pdflatex $< ) || echo noRerun "
	bash -c " ( grep Rerun\ to $*.log && pdflatex $< ) || echo noRerun "
